<h1>addresses#index</h1>
<p>Find me in app/views/addresses/index.html.erb</p>

<table>
  <tr>
    <th>Unit</th>
    <th>Number</th>
    <th>Street</th>
    <th>Suburb</th>
    <th>Postcode</th>
    <th>State</th>
  </tr>
  <%# displays each row in the addresses db (@addresses assigned in controller) %>
  <% @addresses.each do |address| %>
    <tr>
      <td><%= address[:unit] %></td>
      <td><%= address[:house_number] %></td>
      <td><%= address[:street] %></td>
      <td><%= address[:suburb] %></td>
      <td><%= address[:postcode] %></td>
      <%# Finds the state using the :state_id and displays the name (@states assigned in controller) %>
      <td><%= @states.find(address[:state_id]) %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to 'New Address', new_address_path %></p>
