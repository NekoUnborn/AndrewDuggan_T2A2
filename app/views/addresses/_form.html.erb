<%= form_with model: @address, local: true do |f| %>
:unit, :house_number, :street, :suburb, :postcode, :state_id
    <p>
        <%= f.label :unit %>
        <%= f.text_field :unit %>
    </p>
    <p>
        <%= f.label :house_number %>
        <%= f.text_field :house_number %>
    </p>
    <p>
        <%= f.label :street %>
        <%= f.text_field :street %>
    </p>
    <p>
        <%= f.label :suburb %>
        <%= f.text_field :suburb %>
    </p>
    <p>
        <%= f.label :postcode %>
        <%= f.text_field :postcode %>
    </p>
    <%# Finds all of the states from the states db and displays them as a selection %>
    <p>
        <%= f.label :state %>
        <%= f.collection_select :state_id, @states, :id, :name %>
    </p>

    <p>
        <%= f.submit %>
    </p>
<% end %>
