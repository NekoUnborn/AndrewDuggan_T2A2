<h1>roles#index</h1>
<p>Find me in app/views/roles/index.html.erb</p>

<% if policy(Role).new? %>
<p><%= link_to 'New Role', new_role_path %></p>
<% end %>
<table>
  <tr>
    <th>Name</th>
    <% if policy(Role).edit? || policy(Role).destroy? %>
      <th>Actions</th>
    <% end%>
  </tr>
  <% @roles.each do |role| %>
    <tr>
      <td><%= link_to role.name, role_path(role) %></td>
      <% if policy(Role).edit? || policy(Role).destroy? %>
        <td>
          <%= link_to 'Edit', edit_role_path(role) if policy(Role).edit? %>
          |
          <%= link_to 'Destroy', role, method: :delete, data: { confirm: 'Are you sure?' } if policy(Role).destroy? %>
        </td>
      <% end %>
    </tr>
  <% end %>
