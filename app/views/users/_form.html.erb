<%= form_with model: @user, local: true do |f| %>
    <p>
        <%= f.label :username %>
        <%= f.text_field :username %>
    </p>
    <p>
        <%= f.label :email %>
        <%= f.text_field :email %>
    </p>
    <% @user.has_role? :tradie %>
    <p>
        <%= f.label :trades %>
        <%= f.collection_check_boxes :trades_id, @trades, :id, :name %>
    </p>
    <% end %>

    <p>
        <%= f.submit %>
    </p>
<% end %>
