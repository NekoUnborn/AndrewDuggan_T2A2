<%= form_with model: @profile, local: true do |f| %>
  <div>
    <%= f.label :role %>
    <%= f.collection_select :role_id, @roles, :id, :name %>
  </div>

  <div class="actions">
    <%= f.submit "Chosen Role" %>
  </div>
<% end %>