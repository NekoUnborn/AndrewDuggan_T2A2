<h1>profiles#index</h1>
<p>Find me in app/views/profiles/index.html.erb</p>


<table>
  <tr>
    <th>Unit</th>
    <th>Number</th>
    <th>Street</th>
    <th>Suburb</th>
    <th>Postcode</th>
    <th>State</th>
  </tr>
  <%# displays each row in the addresses db (@addresses assigned in controller) %>
    <tr>
      <td><%= profile.user.username %></td>
      <td><%= profile.address.unit %></td>
      <td><%= address[:house_number] %></td>
      <td><%= address[:street] %></td>
      <td><%= address[:suburb] %></td>
      <td><%= address[:postcode] %></td>
      <%# Finds the state using the :state_id and displays the name (@states assigned in controller) %>
      <td><%= @states.find(address[:state_id])[:name] %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to 'New Profile', new_profile_path %></p>
